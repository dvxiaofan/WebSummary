        {
            layer.alert("错误：搜索内容不能为空！", { icon: 5, scrollbar: false }); //5：失败；6：成功
            return;
        }
        //alert('搜索：' + Keyword);

        g_SearchDeviceList = search_user_list(g_AllDeviceList, Keyword);    //搜索
        if (g_SearchDeviceList.length == 0) return;                       //没有搜索到
